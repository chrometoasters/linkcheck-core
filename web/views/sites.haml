.row
    .span12
        %h2.siteListHeader Sites
        %ul.nav.nav-tabs
            %li.active
                %a{:href => '#recent', :data => {:toggle => 'tab'}}
                    != "Checked this week" + "<span class='badge tabBadge'>#{@recent.length}</span>"
            %li   
                %a{:href => '#old', :data => {:toggle => 'tab'}}
                    != "Others" + "<span class='badge tabBadge'>#{@old.length}</span>"
        
        .tab-content
            .tab-pane.active#recent
                %table.siteListTable
                    %thead
                        %tr.goLeft
                            %th
                                Site
                            %th
                                Last checked
                            %th
                                Links
                            %th
                                Problem pages
                            %th
                                Pages checked
                            %th
                                Links checked
                    %tbody
                    - @recent.each do |site|
                        != haml :_site, :locals => { :site => site }
                    
            .tab-pane#old
                %table.table.siteListTable
                    %thead.pull-left
                        %tr
                            %th
                                Site
                            %th
                                Last checked
                            %th
                                Links
                            %th
                                Problem pages
                            %th
                                Pages checked
                            %th
                                Links checked
                    %tbody             
                    - @old.each do |site|
                        != haml :_site, :locals => { :site => site }
